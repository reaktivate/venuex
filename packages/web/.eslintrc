{
  "plugins": ["react", "jsx-a11y"],
  "extends": ["plugin:react/recommended", "react-app", "plugin:jsx-a11y/recommended", "prettier/react"],
  "env": {
    "browser": true
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "rules": {
    "indent": "off",
    "arrow-parens": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "named": "never",
        "anonymous": "always",
        "asyncArrow": "always"
      }
    ],
    "quote-props": ["error", "as-needed"],
    "operator-linebreak": ["error", "after"],
    "react/jsx-indent": ["error", 2],
    "react/sort-comp": "off",
    "react/no-find-dom-node": "off",
    "react/prop-types": "warn"
  }
}
