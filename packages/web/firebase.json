{
  "hosting": {
    "public": "build/firebase/public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "next"
      }
    ]
  },
  "functions": {
    "source": "build/firebase/functions"
  },
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "database": {
    "rules": "firebase/database.rules.json"
  }
}
